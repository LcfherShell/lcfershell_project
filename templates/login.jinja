<!DOCTYPE html>
<html lang="en">
<head>
    <title>{% block pages %}{% endblock %}{{ pages }}</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="{{ url_for('static', filename='bootstrap/css/fontawesome.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='/bootstrap/css/brands.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='/bootstrap/css/solid.css') }}" rel="stylesheet"> 
<!--===============================================================================================-->	
	<link rel="icon" type="image/png" href="{{ url_for('static', filename='bootstrap/images/icons/lcfshell.png') }}"/>
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='bootstrap/vendor/bootstrap/css/bootstrap.min.css') }}">

	<link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='bootstrap/fonts/Linearicons-Free-v1.0.0/icon-font.min.css') }}">
<!--===============================================================================================-->

	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='bootstrap/vendor/animate/animate.css') }}">
<!--===============================================================================================-->	
	<link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='bootstrap/vendor/css-hamburgers/hamburgers.min.css') }}">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='bootstrap/vendor/select2/select2.min.css') }}">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='bootstrap/css/util.css') }}">
	<link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='bootstrap/css/main.css') }}">
<!--===============================================================================================-->
<style>
    * {
  user-select: none;
}
*::selection {
  background: none;
}
*::-moz-selection {
  background: none;
}
img{
	width: 100px;
}
</style>
</head>
<body oncontextmenu="return false;">
	
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-l-30 p-r-30 p-t-13 p-b-13">
				<form action="" method="post" class="login100-form validate-form">
                    {{ form.csrf_token() }}
					<span class="login100-form-title p-b-10">
						<img src="{{ url_for('static', filename='bootstrap/images/icons/logo.png') }}" alt="">
						<p>{{ pages }}</p>
					</span>

					<div class="wrap-input100 validate-input m-b-12">
						{{form.user(class="input100", id="user", placeholder="Username", autocomplete="off")}}
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<span class="lnr lnr-user"></span>
                        </span>
                        {% for error in form.user.errors %}
                        <span><small>{{ error }}</small></span>
                        {% endfor %}
					</div>

					<div class="wrap-input100 validate-input m-b-12">
						{{form.password(class="input100", id="password", placeholder="Password",  ondblclick="ShowEvent()", autocomplete="off")}}
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<span class="lnr lnr-lock"></span>
                        </span>
                        {% for error in form.password.errors %}
                        <span><small>{{ error }}</small></span>
                        {% endfor %}
					</div>					
                    <script>
                        function ShowEvent() {
                            var temp = document.getElementById("password"); 
                            if (temp.type === "password") { 
                                     temp.type = "text"; 
                                } 
                            else { 
                                     temp.type = "password"; 
                                } 
                        }

                        //disable inspect element and copy-paste
                        document.onkeydown = function(e) {
  if(event.keyCode == 123) {
     return false;
  }
  if(e.ctrlKey && e.shiftKey && e.keyCode == 'I'.charCodeAt(0)) {
     return false;
  }
  if(e.ctrlKey && e.shiftKey && e.keyCode == 'C'.charCodeAt(0)) {
     return false;
  }
  if(e.ctrlKey && e.shiftKey && e.keyCode == 'J'.charCodeAt(0)) {
     return false;
  }
  if(e.ctrlKey && e.keyCode == 'U'.charCodeAt(0)) {
     return false;
  }
}
                        </script>
					<div class="container-login100-form-btn">
                        {{form.recaptcha()}}
                        {% for error in form.recaptcha.errors %}
                        <span><small>{{ error }}</small></span>
                        {% endfor %}
					</div>
					
					<div class="container-login100-form-btn p-t-20">
                        {{form.submit(class="login100-form-btn")}}
					</div>

					<div class="text-center w-full p-t-35 p-b-22">
						<span class="txt1">
							Or login with
						</span>
					</div>
					<a href="/access/github" class="btn-google m-b-10">
						<i class="fab fa-github"></i>
						Github
					</a>

					<a href="/access/google" class="btn-face m-b-10">
						<i class="fab fa-google"></i>
						Google
					</a>
					<div class="text-center w-full p-t-25">
						<span class="txt1">
							Not a member?
						</span>

						<a class="txt1 bo1 hov1" href="register">
							Sign up now							
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
	
	<script src="{{ url_for('static', filename='bootstrap/vendor/jquery/jquery-3.2.1.min.js') }}"></script>
<!--===============================================================================================-->
<!--===============================================================================================-->
	<script src="{{ url_for('static', filename='bootstrap/vendor/select2/select2.min.js') }}"></script>
<!--===============================================================================================-->
	<script src="{{ url_for('static', filename='bootstrap/javascript/main.js') }}"></script>
</body>
</html>